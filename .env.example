# ========================================
# Network Configuration
# ========================================

# Sepolia Testnet RPC URL
# Get your API key from: https://infura.io or https://alchemy.com
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_API_KEY
RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_API_KEY

# Chain ID (11155111 for Sepolia, 1 for Mainnet)
CHAIN_ID=11155111

# ========================================
# Deployment & Security
# ========================================

# Private key for contract deployment (without 0x prefix)
# WARNING: Never commit this file with real keys!
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Etherscan API Key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key

# ========================================
# Contract Addresses (Sepolia Testnet)
# ========================================

# PauserSet Contract - Emergency pause control
PAUSER_SET_ADDRESS=0x89101063912C3e471dA0ead7142BD430f423de2D

# Gateway Contract - FHE Gateway for decryption
GATEWAY_CONTRACT_ADDRESS=0xYourGatewayContractAddress
GATEWAY_ADDRESS=0xYourGatewayContractAddress

# Main Flight Booking Contract
CONFIDENTIAL_FLIGHT_BOOKING_ADDRESS=0x604923E8D9d7938DE98Dd5aE193d6eea0336206A
HOST_CONTRACT_ADDRESS=0x604923E8D9d7938DE98Dd5aE193d6eea0336206A

# Decryption Oracle Address
DECRYPTION_CONTRACT_ADDRESS=0xYourDecryptionContractAddress

# KMS Generation Contract
KMS_GENERATION_ADDRESS=0xYourKMSGenerationContractAddress
KMS_CONNECTOR_KMS_GENERATION_CONTRACT_ADDRESS=0xYourKMSGenerationContractAddress

# ========================================
# PauserSet Configuration
# ========================================

# Number of authorized pausers
# NUM_PAUSERS should be set to n_kms + n_copro
# where n_kms = number of registered KMS nodes
# and n_copro = number of registered coprocessors
NUM_PAUSERS=2
HOST_NUM_PAUSERS=2

# Pauser addresses (index from 0 to NUM_PAUSERS-1)
PAUSER_ADDRESS_0=0xYourFirstPauserAddress
PAUSER_ADDRESS_1=0xYourSecondPauserAddress
HOST_PAUSER_ADDRESS_0=0xYourFirstHostPauserAddress
HOST_PAUSER_ADDRESS_1=0xYourSecondHostPauserAddress
# Add more PAUSER_ADDRESS_[N] as needed based on NUM_PAUSERS

# Comma-separated list of pauser addresses (alternative format)
PAUSER_ADDRESSES=0xYourPauserAddress1,0xYourPauserAddress2

# ========================================
# Authorized Addresses
# ========================================

# Contract Owner Address (deployment address)
OWNER_ADDRESS=your_owner_address_here

# Airline Operator Addresses (comma-separated)
AIRLINE_ADDRESSES=0xYourAirlineAddress1,0xYourAirlineAddress2

# ========================================
# Frontend Configuration (Next.js)
# ========================================

# WalletConnect Project ID
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Contract Addresses (public - safe to expose)
NEXT_PUBLIC_CONTRACT_ADDRESS=0x604923E8D9d7938DE98Dd5aE193d6eea0336206A
NEXT_PUBLIC_PAUSER_SET_ADDRESS=0x89101063912C3e471dA0ead7142BD430f423de2D
NEXT_PUBLIC_CHAIN_ID=11155111

# Legacy Vite configuration (for backward compatibility)
VITE_CONTRACT_ADDRESS=0x604923E8D9d7938DE98Dd5aE193d6eea0336206A
VITE_GATEWAY_URL=https://gateway.zama.ai
VITE_NETWORK_RPC=https://sepolia.infura.io/v3/your_project_id

# ========================================
# Gas Configuration
# ========================================

# Gas price strategy: "auto" | "fast" | "standard" | "slow"
GAS_STRATEGY=auto

# Manual gas price (in Gwei)
GAS_PRICE_GWEI=20

# Gas limit multiplier (1.0 = 100%, 1.2 = 120%)
GAS_LIMIT_MULTIPLIER=1.2

# Maximum gas price (in Gwei) - safety limit
MAX_GAS_PRICE_GWEI=500

# Enable gas reporting in tests
REPORT_GAS=true

# Coinmarketcap API key for USD gas costs
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# ========================================
# Compiler Optimization
# ========================================

# Optimizer runs (200 = balanced, 1000 = gas-optimized, 1 = size-optimized)
OPTIMIZER_RUNS=200

# Enable Solidity optimizer
ENABLE_OPTIMIZER=true

# ========================================
# Testing & Coverage
# ========================================

# Enable coverage reports
ENABLE_COVERAGE=true

# Minimum confirmation blocks
MIN_CONFIRMATIONS=2

# Enable transaction simulation
SIMULATE_TRANSACTIONS=true

# ========================================
# Security Configuration
# ========================================

# Enable FHE mock for testing
ENABLE_FHE_MOCK=true

# FHE Gateway URL
FHE_GATEWAY_URL=https://gateway.fhe.zama.ai

# ========================================
# Performance Optimization
# ========================================

# Enable code splitting
ENABLE_CODE_SPLITTING=true

# Enable tree shaking
ENABLE_TREE_SHAKING=true

# Bundle analyzer
ANALYZE_BUNDLE=false

# ========================================
# Monitoring & Development
# ========================================

# Node environment
NODE_ENV=development

# Debug mode
DEBUG=false

# Verbose logging
VERBOSE_LOGGING=false

# Local development port
PORT=1381

# Sentry DSN (optional)
SENTRY_DSN=your_sentry_dsn_here

# ========================================
# CI/CD Configuration
# ========================================

# Codecov token (private repos only)
CODECOV_TOKEN=your_codecov_token

# CI environment flag
CI=false
