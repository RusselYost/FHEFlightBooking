{
  "name": "confidential-flight-booking",
  "version": "2.0.0",
  "type": "module",
  "description": "Confidential Flight Booking System with FHE - Updated for fhevm v0.5.0",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile --config hardhat.config.deploy.cts",
    "deploy": "hardhat run scripts/deploy.cjs --network sepolia",
    "deploy:gateway": "hardhat run scripts/deploy-gateway.cjs --network sepolia",
    "deploy:pauser": "hardhat run scripts/deploy-pauser.cjs --network sepolia",
    "deploy:all": "npm run deploy:pauser && npm run deploy:gateway && npm run deploy",
    "test": "hardhat test --config hardhat.config.deploy.cts",
    "test:coverage": "hardhat coverage --config hardhat.config.deploy.cts",
    "coverage": "hardhat coverage --config hardhat.config.deploy.cts",
    "lint": "solhint \"contracts/**/*.sol\"",
    "lint:fix": "solhint \"contracts/**/*.sol\" --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:gas": "REPORT_GAS=true npm test",
    "verify": "node scripts/verify.cjs",
    "interact": "node scripts/interact.cjs",
    "simulate": "node scripts/simulate.cjs",
    "contract:status": "node scripts/interact.cjs status",
    "contract:list": "node scripts/interact.cjs listFlights",
    "contract:stats": "node scripts/interact.cjs stats",
    "security:audit": "npm audit --audit-level=moderate",
    "ci": "npm run format:check && npm run lint && npm run compile && npm run test",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "husky"
  },
  "keywords": [
    "blockchain",
    "fhe",
    "privacy",
    "flight-booking",
    "zama",
    "fhevm",
    "zero-knowledge"
  ],
  "author": "PrivateAir",
  "license": "MIT",
  "dependencies": {
    "@fhevm/solidity": "^0.9.0-1",
    "ethers": "^6.7.1",
    "fhevmjs": "^0.6.2"
  },
  "devDependencies": {
    "@fhevm/hardhat-plugin": "^0.2.0-0",
    "@fhevm/mock-utils": "^0.2.0-0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "@zama-fhe/oracle-solidity": "^0.1.0",
    "@zama-fhe/relayer-sdk": "^0.2.0",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "eslint-config-prettier": "^10.1.8",
    "hardhat": "^2.19.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "mocha": "^10.2.0",
    "prettier": "^3.6.2",
    "solhint": "^6.0.1",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3",
    "vite": "^4.5.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RusselYost/ConfidentialFlightBooking.git"
  },
  "bugs": {
    "url": "https://github.com/RusselYost/ConfidentialFlightBooking/issues"
  },
  "homepage": "https://confidential-flight-booking.vercel.app"
}
